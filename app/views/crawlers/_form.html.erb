<%= simple_form_for @crawler, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :aliexpress %>
  <%= error_span(@crawler[:aliexpress_id]) %>
  <%= f.association :wordpress %>
  <%= error_span(@crawler[:wordpress_id]) %>
  <%= f.input :enabled %>
  <%= error_span(@crawler[:enabled]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                crawlers_path, :class => 'btn btn-default' %>
<% end %>
