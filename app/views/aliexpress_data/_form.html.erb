<%= simple_form_for @aliexpress_datum, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@aliexpress_datum[:name]) %>
  <%= f.input :email %>
  <%= error_span(@aliexpress_datum[:email]) %>
  <%= f.input :password %>
  <%= error_span(@aliexpress_datum[:password]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                aliexpress_data_path, :class => 'btn btn-default' %>
<% end %>
