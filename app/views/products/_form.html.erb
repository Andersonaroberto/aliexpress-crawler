<%= simple_form_for @product, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :aliexpress_link, placeholder: 'http://pt.aliexpress.com/item/' %>
  <%= error_span(@product[:aliexpress_link]) %>
  <%= f.input :option_1, placeholder: 'Opção numérica da esquerda para a direita' %>
  <%= error_span(@product[:option_1]) %>
  <%= f.input :option_2, placeholder: 'Opção numérica da esquerda para a direita' %>
  <%= error_span(@product[:option_2]) %>
  <%= f.input :option_3, placeholder: 'Opção numérica da esquerda para a direita' %>
  <%= error_span(@product[:option_3]) %>
  <%= f.input :shipping, placeholder: 'Opção numérica de cima para baixo' %>
  <%= error_span(@product[:shipping]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to 'Cancelar',
                products_path, :class => 'btn btn-default' %>
<% end %>
