<%- model_class = ProductType -%>
<div class="page-header">
  <h1>Produtos</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID Wordpress</th>
      <th>Nome</th>
      <th>Tipo</th>
      <th>Link</th>
      <th>Link Aliexpress</th>
      <th>Opção 1</th>
      <th>Opção 2</th>
      <th>Opção 3</th>
      <th>Frete</th>
      <th>Atualizado em</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @product_types.each do |product_type| %>
      <tr>
        <td><%= link_to product_type.id, product_type_path(product_type) %></td>
        <td><%= product_type.name %></td>
        <td><%= product_type.aliexpress_link %></td>
        <td><%= product_type.product_id %></td>
        <td><%= product_type.option_1 %></td>
        <td><%= product_type.option_2 %></td>
        <td><%= product_type.option_3 %></td>
        <td><%= product_type.shipping %></td>
        <td><%=l product_type.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_product_type_path(product_type), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      product_type_path(product_type),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_product_type_path,
            :class => 'btn btn-primary' %>
