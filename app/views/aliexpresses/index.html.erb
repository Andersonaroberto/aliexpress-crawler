<%- model_class = Aliexpress -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
  <h4>
    <p>Instruções:</p>
    <p>Criar uma nova configuração do Aliexpress com Nome do usuário, email e senha do cadastro aliexpress</p>
  </h4>
</div>
<%= link_to 'Novo',
new_aliexpress_path,
:class => 'btn btn-primary' %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @aliexpresses.each do |aliexpress| %>
      <tr>
        <td><%= link_to aliexpress.name, aliexpress_path(aliexpress) %></td>
        <td><%= aliexpress.email %></td>
        <td>
          <%= link_to 'Editar',
                      edit_aliexpress_path(aliexpress), :class => 'btn btn-default btn-xs' %>
          <%= link_to 'Deletar',
                      aliexpress_path(aliexpress),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Tem certeza?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
