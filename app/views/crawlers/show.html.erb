<%- model_class = Crawler -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Aliexpress:</strong></dt>
  <dd><%= @crawler.aliexpress.name %></dd>
  <dt><strong>Wordpress:</strong></dt>
  <dd><%= @crawler.wordpress.name %></dd>
  <dt><strong>Habilitado:</strong></dt>
  <dd><%= case @crawler.enabled
          when true
            'Habilitado'
          else
            'Desabilitado'
          end
        %></dd>
  <dt><strong>Intiner√°rio:</strong></dt>
  <dd><%= @crawler.schedule %></dd>
</dl>

<%= link_to 'Voltar',
              crawlers_path, :class => 'btn btn-default'  %>
<%= link_to 'Editar',
              edit_crawler_path(@crawler), :class => 'btn btn-default' %>
<%= link_to 'Deletar',
              crawler_path(@crawler),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
