<%- model_class = Product -%>
<div class="page-header">
  <h1><%= @product.name %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:type) %>:</strong></dt>
  <dd><%= @product.type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:link) %>:</strong></dt>
  <dd><%= @product.link %></dd>
  <dt><strong><%= model_class.human_attribute_name(:aliexpress_link) %>:</strong></dt>
  <dd><%= @product.aliexpress_link %></dd>
  <dt><strong><%= model_class.human_attribute_name(:option_1) %>:</strong></dt>
  <dd><%= @product.option_1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:option_2) %>:</strong></dt>
  <dd><%= @product.option_2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:option_3) %>:</strong></dt>
  <dd><%= @product.option_3 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:shipping) %>:</strong></dt>
  <dd><%= @product.shipping %></dd>
</dl>

<%= link_to 'Voltar',
              products_path, :class => 'btn btn-default'  %>
<%= link_to 'Editar',
              edit_product_path(@product), :class => 'btn btn-default' %>
<%= link_to 'Deletar',
              product_path(@product),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Tem certeza?')) },
              :class => 'btn btn-danger' %>
