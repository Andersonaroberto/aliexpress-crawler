<%= simple_form_for @product, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@product[:name]) %>
  <%= f.input :link %>
  <%= error_span(@product[:link]) %>
  <%= f.input :aliexpress_link %>
  <%= error_span(@product[:aliexpress_link]) %>
  <%= f.input :option_1 %>
  <%= error_span(@product[:option_1]) %>
  <%= f.input :option_2 %>
  <%= error_span(@product[:option_2]) %>
  <%= f.input :option_3 %>
  <%= error_span(@product[:option_3]) %>
  <%= f.input :shipping %>
  <%= error_span(@product[:shipping]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                products_path, :class => 'btn btn-default' %>
<% end %>
